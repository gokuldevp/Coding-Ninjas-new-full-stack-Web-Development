    <link rel="stylesheet" href="new-product.css">
    <h1>Add a Product</h1>
    <% if (error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
        
    <% } %>
    <form action="/submit-product" method="post">
        <label for="productName">Product Name:</label><br>
        <input type="text" id="productName" name="name" ><br><br>

        <label for="description">Description:</label><br>
        <textarea id="description" name="desc" rows="4" required></textarea><br><br>

        <label for="imageURL">Image URL:</label><br>
        <input type="url" id="imageURL" name="imageURL" required><br><br>

        <label for="price">Price:</label><br>
        <input type="number" id="price" name="price" step="0.01" min="0" required><br><br>

        <button type="submit">Submit</button>
    </form>
